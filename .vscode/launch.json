    "version": "0.2.0",
    "configurations": [
        {
            "name": "django server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/django_project/app/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}/src"
            }
        },
        {
            "name": "django create migration",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/django_project/app/manage.py",
            "console": "integratedTerminal",
            "args": [
                "makemigrations",
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}/src"
            }
        },
        {
            "name": "django migrate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/django_project/app/manage.py",
            "console": "integratedTerminal",
            "args": [
                "migrate",
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}/src"
            }
        }

    ]
}
